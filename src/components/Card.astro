---
export interface Props {
  href?: string;
  clazz?: string;
}

const { href } = Astro.props;
const clazz = `${Astro.props.class} inline-flex flex-col p-5 gap-5 bg-white/10 rounded-lg`;
---

{href ? (
  <a href={href} class={clazz} target="_blank" rel="noopener noreferrer">
    <slot />
  </a>
) : (
  <div class={clazz}>
    <slot />
  </div>
)}
<style>
  a {
    @apply bg-right-bottom bg-no-repeat bg-origin-content duration-200 hover:scale-105;
    background-image: url("data:image/svg+xml;base64,");
    background-size: 1rem;
  }
</style>
